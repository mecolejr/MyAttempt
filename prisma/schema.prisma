generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model CachedData {
  id          String   @id @default(cuid())
  key         String   @unique
  data        String   // JSON string
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Location {
  id          String   @id @default(cuid())
  name        String
  state       String
  fipsCode    String?
  mobility    Boolean  @default(false)
  inclusion   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, state])
}
